<Page x:Class="DesktopClient.Pages.Author.AuthorFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopClient.Pages.Author"
      xmlns:vm="clr-namespace:DesktopClient.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorFormPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Grid.Row="0" Grid.Column="0">Name</TextBlock>
            <TextBox Text="{Binding Path=Author.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="Auto"
                     Width="300"
                     TextWrapping="Wrap"/>
            <TextBlock Grid.Row="0" Grid.Column="0">Description</TextBlock>
            <TextBox Text="{Binding Path=Author.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="Auto"
                     Width="300"
                     TextWrapping="Wrap"/>
            <Button Width="75" Height="Auto" Click="OnSaveClick" Content="Save" Margin="10"/>

        </StackPanel>
    </Grid>
</Page>
