<Page x:Class="DesktopClient.Pages.StartScreenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartScreenPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.10*" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button x:Name="AuthorPageButton" Content="Go to authors table" Click="OnAuthorPageButtonClick" Width="150"/>
            <Button x:Name="BookPageButton" Content="Go to books table" Click="OnBookPageButtonClick" Width="150"/>
            <Button x:Name="ExemplarPageButton" Content="Go to exemplars table" Click="OnExemplarPageButtonClick" Width="150"/>
            <Button x:Name="GenrePageButton" Content="Go to genres table" Click="OnGenrePageButtonClick" Width="150"/>
            <Button x:Name="PublisherPageButton" Content="Go to publishers table" Click="OnPublisherPageButtonClick" Width="150"/>
        </StackPanel>
        <TextBlock FontSize="42" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center">Welcome</TextBlock>
    </Grid>
</Page>
